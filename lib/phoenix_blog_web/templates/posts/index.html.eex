<div class="container section">
  <a class="btn" href="/posts/new">New Post</a>
  <%= for post <- @posts do %>
    <div class="card">
      <div class="card-content">
        <span class="card-title">
          <%= post.title %>
        </span>
        <p><%= post.body %></p>
      </div>
    </div>
  <% end %>
</div>
